// Find the sum of all numbers below 1000 that are multiples of either 3 or 5 (or both).
#include <iostream>
#define LIMIT 1000

using namespace std;

int main(){
	int sum = 0;
	for (int i = 0; i < LIMIT; i++) {
		// Check if the number is divisible by 3 or 5.
		if (i % 3 == 0 || i % 5 == 0) {
			// If so, add it to the sum.
			sum += i;
		}	
	}	
	cout<<"The sum is: "<<sum;
	return 0;
}
